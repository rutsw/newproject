<div class="jumbotron text-center">
    <h1>התחברות</h1>
</div>

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">  
        <form action="/login" method="POST" id="login-form">
            <div class="form-group">
                <label>שם משתמש</label>
                <input type="text" name="username" class="form-control" id="username", placeholder="הכנס שם משתמש">
            </div>
            <div class="form-group">
                <label>סיסמא</label>
                <input type="password" name="password" class="form-control" id="password", placeholder="הכנס סיסמא">
            </div>
            <div class="form-group">
                <button type="submit" class="button btn btn-default">התחבר</button>
                <a href="/register">משתמש חדש? הרשם.</a>
            </div>
        </form>
    </div>
</div>



    