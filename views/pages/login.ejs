<link rel="stylesheet" href="../../css/loginStyle.css" >

<div class="row">
    <div class="container text-center">
        <div class="row">
            <div class="col-md-12_login">
                <p class="login">התחברות</p>
            </div>
        </div>
    </div>
    <br><br>
    <div class="col-sm-6 col-sm-offset-3">  
        <form action="/login" method="POST" id="login-form">
            <div class="form-group">
                <label>כתובת מייל</label>
                <input type="email" name="email" class="form-control" id="email", placeholder="הכנס מייל">
            </div>
            <div class="form-group">
                <label>סיסמא</label>
                <input type="password" name="password" class="form-control" id="password", placeholder="הכנס סיסמא">
            </div>
            <br>
            <div class="form-group-btn">
                <button type="submit" class="btn btn-default">התחבר</button>
                <a href="/register">משתמש חדש? הרשם</a>
            </div>
        </form>
        <br><br><br>
    </div>
</div>

