<link rel="stylesheet" href="../../css/mainStyle.css" >

<div class="container text-center">
    <div class="row">
           <div class="col-sm-12">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <img src="../../img3.jpg" class="img-responsive0" alt="Image1">
                        <div class="carousel-caption">
                            <h3> </h3>
                            <p> </p>
                        </div>
                    </div>

                    <div class="item">
                        <img src="../../img2.jpg" class="img-responsive0" alt="Image2">
                        <div class="carousel-caption">
                            <h3> </h3>
                            <p> </p>
                        </div>
                    </div>
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container text-center">
    <br><br>
    <legend><h2 id="product_h2"><strong>מוצרים נבחרים</strong></h2></legend>
    <div class="row">
      <br>
      <% for (var product of products) { %>
          <div class="img-responsive1">
            <div class="thumbnail">
             <img id="myImg" src="../../<%= product.category%>/<%= product.imgName%>.jpg" alt="<%= product.name %>">                         
              <!-- The Modal -->
              <div id="myModal" class="modal">
                <span class="close">&times;</span>
                <img class="modal-content" id="img01">
                <div id="caption1"></div>
              </div>

              <div class="caption">
                <h5><%= product.name %></h5>
                <h6><%= product.price %></h6>
              </div>
              
            </div>
          </div>
      <% } %>      
      <div class="clearfix"></div>
    </div>
</div>

<div class="container text-center" id="contact">
    <legend><h2 id="contact_h2">יצירת קשר</h2></legend>
     <div class="col-sm-4">
        <form name="contact" action="/send" method="POST">
            <div class="form-group"><div id="errn"></div>
                <input type="text" class="form-control" name="name" id="name" pattern="[^0-9]+" title="אותיות בלבד" maxlength="20" placeholder="שם" required="required">
            </div>
            <div class="form-group"><div id="erre"></div>
                <input type="email" class="form-control" name="email" id="email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$" placeholder="כתובת מייל" required="required">
            </div>
            <div class="form-group"><div id="errq"></div>
                <textarea class="form-control" name="query" id="query" placeholder="תוכן ההודעה" rows="5" cols="20" required="required"></textarea>
            </div>     
            <div class="form-group">
                <button type="submit" class="btn pull-left" id="a">שלח פניה</button>
            </div>
        </form>
        <br><br><br>
    </div>
</div>  

<div class="container text-center" id="customers">
    <br><br>
    <div class="row">
        <legend><h2 id="customers_h2"><b>בין לקוחותינו</b></h2></legend>
        <br>
        <div class="col-sm-12-image">
            <img src="../../ourCustomers.png" class="img-responsive2" alt="Pa_Image1">
        </div>
    </div>
    <br><br>
</div>

