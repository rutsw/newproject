<div class="container text-center">
    <div class="row">
        <div class="col-md-12_contact">
            <p class="contact">צור קשר</p>
        </div>
    </div>
    <div class="container">
        <br><br>
        <div class="row">
            <div class="col-md-4">
                <form>
                    <legend>
                            <p><strong>יוסי עמר</strong>
                                <br>הדרך להציל חיים
                            </p>
                    </legend>
                    <address>
                        <p>אהבת ישראל 44
                            <br>תל ציון מ. 9062200
                            <br>052-7766660
                        </p>
                        <a href="mailto:#">yosiamarya@gmail.com</a>
                    </address>
                </form>
            </div>
            <div class="col-md-8">
                <div class="well well-sm">
                     <form action="/sendContact" method="POST">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="name">הודעה</label>
                                    <textarea class="form-control" name="message" id="message" rows="12" cols="25" required="required" placeholder="תוכן ההודעה"></textarea>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="name">שם</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                                        <input type="text" class="form-control" name="name" id="name" placeholder="הכנס שם" required="required" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="phone">טלפון</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-phone"></span></span>
                                        <input type="text" class="form-control" name="phone" id="phone" placeholder="הכנס מספר טלפון" required="required" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="email">כתובת מייל</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
                                        <input type="email" class="form-control" name="email" id="email" placeholder="הכנס כתובת מייל" required="required" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="subject">נושא</label>
                                    <select id="subject" name="subject" class="form-control" required="required">
                                        <option value="chosse" selected="">בחר:</option>
                                        <option value="service1">ציוד רפואי</option>
                                        <option value="service2">קורסים והדרכות</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary pull-left" id="btnContactUs">שלח פניה</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
