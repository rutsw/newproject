<div class="container text-center">
    <div class="row"></div>

    <br><br>
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th><center>שם משתמש</center></th>
                <th><center>כתובת מייל</center></th>
                <th><center>מספר פאלפון</center></th>
            </tr>
        </thead>
        <tbody>
            <% for (var user of users) { %>
                <tr>
                    <td><%= user.local.username %></td>
                    <td><%= user.local.email %></td>
                    <td><%= user.local.telephone %></td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>
