<link rel="stylesheet" href="../../css/cartStyle.css" >
<%var counter=0 %>
<div class="container text-center">
    <div class="row">
        <div class="col-md-12_cart">
            <p class="cart"><%= user.local.username %></p>
        </div>
    </div>

    <br><br>
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th><center>שם מוצר</center></th>
                <th><center>תאור</center></th>
            </tr>
        </thead>
        <tbody>
            <% for (var product of products) { %>
                <tr>
                    <%if(product.category == "medical equipment"){%>
                    <td><img id="myImg" src="../../MedicalEquipment/<%= product.imgName %>.jpg"><%= product.name %></td>
                     <% } %>
                    <%if(product.category == "medical product"){%>
                    <td><img id="myImg" src="../../MedicalProduct/<%= product.imgName %>.jpg"><%= product.name %></td>
                     <% } %>
                    <%if(product.category == "medical furniture"){%>
                    <td><img id="myImg" src="../../medicalFurniture/<%= product.imgName %>.jpg"><%= product.name %></td>
                     <% } %>
                    <td><%= product.description %></td>
                    <td>
                        <a href="/cart/<%= product.slug %>/delete" class="btn btn-sm btn-danger">מחיקה</a>
                    </td>
                </tr>
            <% counter=counter+1 %>
            <% } %>
        </tbody>
    </table>
    
    <div class="row">
        <div class="col-md-12_cart">
            <p class="cart"><%=  counter %></p>
        </div>
    </div>
</div>



